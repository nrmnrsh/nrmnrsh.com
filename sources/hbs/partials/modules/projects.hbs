<div class="content content-projects has-{{scheme}}-scheme">
	<div>
		<h2>{{context.headline}}</h2>
		<p>{{context.copy}}</p>

		<ul>
			{{#each context.projects}}
				<li>
					<h3>
						{{#if this.url}}
							<a
								href="{{this.url}}"
								title="Open the ”{{this.name}}” website"
								target="_blank"
								rel="noopener">
						{{/if}}
							{{this.name}}
						{{#if this.url}}
							</a>
						{{/if}}
					</h3>
					{{#if this.datePublished}}
						<time datetime="{{this.datePublished}}">
							{{this.datePublished}}
						</time>
					{{/if}}

					<p>{{this.details}}</p>

					{{#if this.url}}
						<a
							class="link"
							href="{{this.url}}"
							title="Open the ”{{this.name}}” website"
							target="_blank"
							rel="noopener">
							Visit project
						</a>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</div>
</div>
